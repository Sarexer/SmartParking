<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bottom_sheet_background"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    >

    <TextView
        android:id="@+id/txtParkNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Придорожная парковка"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Некрасовский пр."
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtPeopleNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="хотят припарковаться: "
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtDistance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|right"
                android:text="100м"
                android:textColor="@android:color/white" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_show_park"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_near"
        android:gravity="center"
        android:text="Посмотреть"
        android:textColor="@android:color/white"
        android:visibility="gone" />
</LinearLayout>
